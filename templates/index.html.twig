<?xml version="1.0" encoding="UTF-8"?>
  <sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
      {% for sitemap in sitemaps %}
        {% if sitemap.loc %}
        <sitemap>{# check if hostname is not alreay in url#}
            <loc>{% if sitemap.loc|replace({hostname:''}) == sitemap.loc %}{{hostname}}{{sitemap.loc}}{%else%}{{sitemap.loc}}{% endif %}</loc>
        </sitemap>
        {% endif %}
    {% endfor %}
  </sitemapindex>